<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="panel panel-default">
        <%= form_for(:session, url: login_path) do |s| %>
          <div class="panel-body">

              <div class="form-group">
                <%= s.label :username %>
                <%= s.text_field :username, class: "form-control", placeholder: "Enter your username" %>
              </div>

              <div class="form-group">
                <%= s.label :password %>
                <%= s.password_field :password, class: "form-control", placeholder: "Enter your password" %>
              </div>



          </div>
          
          <div class="panel-footer">

                <%= s.submit "Log in", class: "btn btn-success" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
