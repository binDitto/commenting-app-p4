<div class="container container-table">
  <div class="row vertical-center-row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="panel panel-default">
        <%= form_for(:session, url: login_path) do |s| %>
          <div class="panel-body">

              <div class="form-group">
                <%= s.label :username %>
                <%= s.text_field :username, class: "form-control", placeholder: "Enter your username" %>
              </div>

              <div class="form-group">
                <%= s.label :password %>
                <%= s.password_field :password, class: "form-control", placeholder: "Enter your password" %>
              </div>



          </div>

          <div class="panel-footer">

                <%= s.submit "Log in", class: "btn btn-success" %>

          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
