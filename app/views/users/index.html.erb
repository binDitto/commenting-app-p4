<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="col-xs-12">
        <h1>Users</h1>
        <hr>
        <% @users.each do |user| %>
          <div class="list-group col-xs-12 col-sm-6">
            <%= link_to(user_path(user), class: "list-group-item list-group-item-info") do %>
              <%= user.username %> <small><%= user.email %></small>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
