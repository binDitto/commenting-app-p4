<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="btn-group">
            <%= link_to 'Users', users_path, class: "btn btn-default"%>
            <% if logged_in? && @user == current_user %>
              <%= link_to(edit_user_path(@user), class: "btn btn-primary" ) do %>
                Edit Profile | <i class="fa fa-pencil"></i>
              <% end %>
            <% end %>
          </div>
          <h2><%= @user.username.capitalize %>'s Profile</h2>
        </div>

        <div class="panel-body">
          <ul class="list-group">
            <li class="list-group-item">
              Email: <%= @user.email %>
            </li>
            <li class="list-group-item">
              Posts:
              <span class="badge badge-success">9</span>
            </li>
            <li class="list-group-item">
              Comments:
              <span class="badge badge-success">9</span>
            </li>
          </ul>
        </div>

        <% if logged_in? && @user == current_user %>
          <div class="panel-footer">
            <%= link_to(user_path(@user), method: :delete,
            data: { confirm: "Are you sure you want to deactivate your account? "},
            class: "btn btn-danger btn-lg") do %>
              Deactivate | <i class="fa fa-trash-o"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
